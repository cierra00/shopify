<div id="showcase">
    <div class="row">
        <div class="col-sm-5">
            {% if settings.custom_showcase1_link != '' or settings.custom_showcase1_text1 != '' or settings.custom_showcase1_text2 != '' %}
            <div class="custom_showcase custom_showcase__1 wow">
                <a href="{{ settings.custom_showcase1_link }}">
                    {% if settings.custom_showcase1_img_toggle and settings.custom_showcase1_img_toggle != '' %}<img src="{{ 'custom_showcase1_img.jpg' | asset_url }}" alt="{{ settings.custom_showcase1_text1 }} {{ settings.custom_showcase1_text2 }}" />{% endif %}
					<div>
                        <h3>{{ settings.custom_showcase1_text1 }}</h3>
                        <span>{{ settings.custom_showcase1_text2 }}</span>
					</div>
                </a>
            </div>
            {% endif %}

            {% if settings.custom_showcase2_link != '' or settings.custom_showcase2_text1 != '' or settings.custom_showcase2_text2 != '' %}
            <div class="custom_showcase custom_showcase__2 wow">
                <a href="{{ settings.custom_showcase2_link }}">
                    {% if settings.custom_showcase2_img_toggle and settings.custom_showcase2_img_toggle != '' %}<img src="{{ 'custom_showcase2_img.jpg' | asset_url }}" alt="{{ settings.custom_showcase2_text1 }} {{ settings.custom_showcase2_text2 }}" />{% endif %}
					<div>
                        <h3>{{ settings.custom_showcase2_text1 }}</h3>
                        <span>{{ settings.custom_showcase2_text2 }}</span>
					</div>
                </a>
            </div>
            {% endif %}
        </div>

        <div class="col-sm-7">
            {% if settings.custom_showcase3_link != '' or settings.custom_showcase3_text1 != '' or settings.custom_showcase3_text2 != '' %}
            <div class="custom_showcase custom_showcase__3 wow">
                <a href="{{ settings.custom_showcase3_link }}">
                    {% if settings.custom_showcase3_img_toggle and settings.custom_showcase3_img_toggle != '' %}<img src="{{ 'custom_showcase3_img.jpg' | asset_url }}" alt="{{ settings.custom_showcase3_text1 }} {{ settings.custom_showcase3_text2 }} {{ settings.custom_showcase3_text3 }}" />{% endif %}
					<div>
                        <h3>{{ settings.custom_showcase3_text1 }}</h3>
                        <h4>{{ settings.custom_showcase3_text2 }}</h4>
					</div>

                    <span>
                        <b><i class="left"></i>{{ settings.custom_showcase3_text3 }}<i class="right"></i></b>
                    </span>
                </a>
            </div>
            {% endif %}
        </div>
    </div>

    {% if settings.custom_showcase4_link != '' or settings.custom_showcase4_text1 != '' or settings.custom_showcase4_text2 != '' %}
    <div class="custom_showcase custom_showcase__4 wow">
        <a href="{{ settings.custom_showcase4_link }}">
            {% if settings.custom_showcase4_img_toggle and settings.custom_showcase4_img_toggle != '' %}<img src="{{ 'custom_showcase4_img.jpg' | asset_url }}" alt="{{ settings.custom_showcase4_text1 }} {{ settings.custom_showcase4_text2 }}" />{% endif %}
            <div>
                <div class="circle">
                    <b>{{ settings.custom_showcase4_text1 }}</b>
                    <span>{{ settings.custom_showcase4_text2 }}</span>
                </div>

                <h3 title="{{ settings.custom_showcase4_text3 }}">{{ settings.custom_showcase4_text3 }}</h3>
                <h4>{{ settings.custom_showcase4_text4 }}</h4>
            </div>
            <span class="flag"><i></i>{{ settings.custom_showcase4_text5 }}</span>
        </a>
    </div>
    {% endif %}
</div>