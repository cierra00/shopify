<div id="megamenu">
<div class="container">
<ul class="sf-menu megamenu_desktop visible-md visible-lg">
	<li class="megamenu__1 {% if link.active %}active{% endif %}">
	    <a href="{{ settings.megamenu1_link }}">{{ settings.megamenu1_text }}{% if settings.megamenu1_badge and settings.megamenu1_badge != '' %}<span class="menu_badge">{{ settings.megamenu1_badge }}</span>{% endif %}</a>
	</li>

	<li class="megamenu__2 {% if link.active %}active{% endif %}">
	    <a href="{{ settings.megamenu2_link }}">{{ settings.megamenu2_text }}{% if settings.megamenu2_badge and settings.megamenu2_badge != '' %}<span class="menu_badge">{{ settings.megamenu2_badge }}</span>{% endif %}</a>
	    {% if settings.megamenu2_sub_toggle and settings.megamenu2_sub_toggle != '' %}
	    <ul>
		<li>
			<div class="submenu">
                <div class="row">
                    <div class="column__1 col-sm-3">
                        <h3><a href="{{ collections[settings.megamenu2_sub_col__1].url }}">{{ collections[settings.megamenu2_sub_col__1].title }}</a></h3>
                        <ul>
                            {% for product in collections[settings.megamenu2_sub_col__1].products limit:7 %}
                            <li><a href="{{ product.url | within: collection }}">{{ product.title | truncate:20 }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>

                    <div class="column__2 col-sm-3">
                        <h3><a href="{{ collections[settings.megamenu2_sub_col__2].url }}">{{ collections[settings.megamenu2_sub_col__2].title }}</a></h3>
                        <ul>
                            {% for product in collections[settings.megamenu2_sub_col__2].products limit:7 %}
                            <li><a href="{{ product.url | within: collection }}">{{ product.title | truncate:20 }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>

                    <div class="column__3 col-sm-3">
                        <h3><a href="{{ collections[settings.megamenu2_sub_col__3].url }}">{{ collections[settings.megamenu2_sub_col__3].title }}</a></h3>
                        <ul>
                            {% for product in collections[settings.megamenu2_sub_col__3].products limit:7 %}
                            <li><a href="{{ product.url | within: collection }}">{{ product.title | truncate:20 }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>

                    <div class="column__4 col-sm-3">
                        <h3><a href="{{ collections[settings.megamenu2_sub_col__4].url }}">{{ collections[settings.megamenu2_sub_col__4].title }}</a></h3>
                        <ul>
                            {% for product in collections[settings.megamenu2_sub_col__4].products limit:7 %}
                            <li><a href="{{ product.url | within: collection }}">{{ product.title | truncate:20 }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
			</div>
		</li>
	    </ul>
		{% endif %}
	</li>

	<li class="megamenu__3 {% if link.active %}active{% endif %}">
	    <a href="{{ blogs[settings.megamenu3_blog_select].url }}">{{ settings.megamenu3_text }}{% if settings.megamenu3_badge and settings.megamenu3_badge != '' %}<span class="menu_badge">{{ settings.megamenu3_badge }}</span>{% endif %}</a>
	    {% if settings.megamenu3_sub_toggle and settings.megamenu3_sub_toggle != '' %}
	    <ul>
		<li>
			<div class="submenu">
			<div class="row">
                {% for article in blogs[settings.megamenu3_blog_select].articles limit:3 %}
                <div class="col-sm-4">
                    <span class="blog_date">{{ article.published_at | date: '%A, %B %d, %Y' }}</span>
                    <h3 class="blog_title"><a href="{{ article.url }}">{{ article.title | truncate:25 }}</a></h3>
                    <div class="blog_content">{{ article.excerpt_or_content | strip_html | truncate:220 }}</div>
                    <a class="btn" href="{{ article.url }}">Read more</a>
                </div>
                {% endfor %}
			</div>
			</div>
		</li>
	    </ul>
		{% endif %}
	</li>

	<li class="megamenu__4 {% if link.active %}active{% endif %}">
	    <a href="{{ collections[settings.megamenu4_sub_collection].url }}">{{ settings.megamenu4_text }}{% if settings.megamenu4_badge and settings.megamenu4_badge != '' %}<span class="menu_badge">{{ settings.megamenu4_badge }}</span>{% endif %}</a>
	    {% if settings.megamenu4_sub_toggle and settings.megamenu4_sub_toggle != '' %}
	    <ul>
		<li>
			<div class="submenu">
			<div class="row">
                {% for product in collections[settings.megamenu4_sub_collection].products limit:4 %}
                <div class="col-sm-3">
                    <div class="product_img">  
                        <a href="{{ product.url | within: collection }}">
                            <img src="{{ product.featured_image.src | product_img_url: 'large' }}" alt="{{ product.featured_image.alt | escape }}" />
                        </a>
                    </div>

                    <div class="product_name">
                        <a href="{{ product.url | within: collection }}">{{ product.title }}</a>
                    </div>

                    <div class="product_price">
                        {% if product.price_varies %}From{% endif %}
                        <span class="money">{{ product.price | money }}</span>
                        {% if product.compare_at_price and product.compare_at_price > product.price %}
                        <span class="money compare-at-price">{{ product.compare_at_price | money }}</span>
                        {% endif %}
                    </div>
                </div>
                {% endfor %}
			</div>
			</div>
		</li>
	    </ul>
		{% endif %}
	</li>

	<li class="megamenu__5 {% if link.active %}active{% endif %}">
	    <a href="{{ settings.megamenu5_link }}">{{ settings.megamenu5_text }}{% if settings.megamenu5_badge and settings.megamenu5_badge != '' %}<span class="menu_badge">{{ settings.megamenu5_badge }}</span>{% endif %}</a>
	</li>

	<li class="megamenu__6 {% if link.active %}active{% endif %}">
	    <a href="{{ settings.megamenu6_link }}">{{ settings.megamenu6_text }}{% if settings.megamenu6_badge and settings.megamenu6_badge != '' %}<span class="menu_badge">{{ settings.megamenu6_badge }}</span>{% endif %}</a>
	</li>
</ul>

